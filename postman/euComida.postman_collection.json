{
  "info": {
    "_postman_id": "a1b2c3d4-e5f6-4a5b-8c9d-0e1f2a3b4c5d",
    "name": "euComida API - v2 Corrigida",
    "description": "Coleção para testar o fluxo completo da API euComida, incluindo autenticação com Keycloak e operações de pedido.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Autenticação",
      "item": [
        {
          "name": "Obter Token de Acesso",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "var jsonData = pm.response.json();",
                  "if (jsonData.access_token) {",
                  "    pm.collectionVariables.set(\"access_token\", jsonData.access_token);",
                  "    console.log(\"Token de acesso salvo na variável 'access_token' da coleção.\");",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/x-www-form-urlencoded"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                { "key": "grant_type", "value": "password" },
                { "key": "client_id", "value": "pedido-service" },
                { "key": "username", "value": "cliente1" },
                { "key": "password", "value": "cliente123" }
              ]
            },
            "url": {
              "raw": "http://localhost:8080/realms/eucomida/protocol/openid-connect/token",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["realms", "eucomida", "protocol", "openid-connect", "token"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "2. API de Pedidos",
      "item": [
        {
          "name": "Criar Novo Pedido",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 201 Created\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "var jsonData = pm.response.json();",
                  "if (jsonData.id) {",
                  "    pm.collectionVariables.set(\"pedido_id\", jsonData.id);",
                  "    console.log(\"ID do pedido salvo na variável 'pedido_id': \" + jsonData.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                { "key": "token", "value": "{{access_token}}", "type": "string" }
              ]
            },
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"clienteId\": \"{{cliente_id}}\"\n}"
            },
            "url": {
              "raw": "http://localhost:8000/api/v1/pedidos",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "v1", "pedidos"]
            }
          },
          "response": []
        },
        {
          "name": "Consultar Status do Pedido",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                { "key": "token", "value": "{{access_token}}", "type": "string" }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8000/api/v1/pedidos/{{pedido_id}}/status",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "v1", "pedidos", "{{pedido_id}}", "status"]
            }
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "access_token",
      "value": ""
    },
    {
      "key": "pedido_id",
      "value": ""
    },
    {
      "key": "cliente_id",
      "value": "c41b3f00-49e8-4cf7-8126-2872f243f10f"
    }
  ]
}